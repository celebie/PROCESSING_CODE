//  spit out an 8bit heart
/*
V2

- Start the heart X * Y and top left so it aligns with the text
--  *adjust start point if text isn't top

- Honor the supplied shapeSize
--  start by drawing box in a for loop
--  *
*/
void bitHeart( float startX, float startY, float shapeSize ) {

  int blockSize = 10;
  float maxx = pow( shapeSize,2 );
  float x = startX;
  float y = startY;

//  GRID
stroke(255);
fill(0);
strokeWeight(.5);
  
for( int xx = 0; xx <= maxx; xx += blockSize ) {

  if( xx % 4 == 0 )
    fill(#EF0000);
  else
    fill(0);

  rect( x, y, blockSize, blockSize );
 
 
  
  if( x <= (startX+shapeSize) ) {
    x += blockSize;
  } else {
    x = startX;
    y -= blockSize;
  }

  if ( y <= (startY-shapeSize-blockSize) ) { 
    break;
  } 
}


